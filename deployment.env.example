# Production Deployment Configuration
# Copy this to .env on your server and update with your actual values

# Core Portal Configuration
ARK_PORT=4000
ARK_HOST=0.0.0.0
ARK_DB_PATH=/var/lib/the-ark/ark.db
ARK_SESSION_SECRET=your-super-secure-session-secret-here-change-this

# Authentication
ARK_ADMIN_EMAIL=hello@alexbates.dev
ARK_ADMIN_PASSWORD=your-secure-admin-password-here-change-this

# Feature Toggles
ARK_ENABLE_UPTIME=true
ARK_ENABLE_SERVER_MONITORING=false
ARK_ENABLE_SSL_TRACKER=false
ARK_ENABLE_LOG_VIEWER=false

# Uptime Monitoring Configuration
ARK_UPTIME_CHECK_INTERVAL=300
ARK_SMTP2GO_API_KEY=your_smtp2go_api_key_here
ARK_SMTP2GO_SENDER=The Ark <ark@alexbates.dev>
ARK_ALERT_RECIPIENT=alerts@alexbates.dev 